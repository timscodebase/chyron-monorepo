#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/Users/tithos/Dev/Local Web/chyron-monorepo/node_modules/.pnpm/badge-maker@4.1.0/node_modules/badge-maker/lib/node_modules:/Users/tithos/Dev/Local Web/chyron-monorepo/node_modules/.pnpm/badge-maker@4.1.0/node_modules/badge-maker/node_modules:/Users/tithos/Dev/Local Web/chyron-monorepo/node_modules/.pnpm/badge-maker@4.1.0/node_modules:/Users/tithos/Dev/Local Web/chyron-monorepo/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/Users/tithos/Dev/Local Web/chyron-monorepo/node_modules/.pnpm/badge-maker@4.1.0/node_modules/badge-maker/lib/node_modules:/Users/tithos/Dev/Local Web/chyron-monorepo/node_modules/.pnpm/badge-maker@4.1.0/node_modules/badge-maker/node_modules:/Users/tithos/Dev/Local Web/chyron-monorepo/node_modules/.pnpm/badge-maker@4.1.0/node_modules:/Users/tithos/Dev/Local Web/chyron-monorepo/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../badge-maker/lib/badge-cli.js" "$@"
else
  exec node  "$basedir/../badge-maker/lib/badge-cli.js" "$@"
fi
